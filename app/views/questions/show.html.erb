<h1 class="title">Question show</h1><br />
<p id="notice"><%= notice %></p>




<p class="content">
  <%=  @question.question %>
  <%=  @question.user %>
  <%=  @question.solved %>

</p><br />
<%= link_to 'Answer this question', new_question_answer_path(@question)  %> |

<%= link_to 'New Question', new_question_path %> |
<%= link_to 'Back', questions_path %>

<table class="span-16" >
    <tr class="blank centrado">
      <th >Respuesta</th>
      <th  >Usuario</th>
    </tr>
  <% @question.answers.each do |answer| %>
    <tr class="item centrado">
      <td > <%= answer.body %></td>
      <td > <%= answer.user %></td><br />
    </tr>
  <% end %>
</table><br />

<div class="content"><%= render 'answers/form' %></div><br />

