<%= form_for(@question) do |form| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> El formulario tiene un error:</h2>

      <ul>
      <% @question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :question %><br />
    <%= form.text_area :question %> <br />
    <%= form.label :user %><br />
    <%= form.text_field :user %><br />
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

